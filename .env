DJANGO_DEBUG=0
DJANGO_ALLOWED_HOSTS=0.0.0.0,localhost,127.0.0.1,::1
# To allow all hosts during local testing, uncomment the next line
# DJANGO_ALLOW_ALL_HOSTS=1
# Generate a unique, long random string for production
DJANGO_SECRET_KEY=replace-this-with-a-long-random-string

# Run the background health/lease worker inside one Gunicorn worker (uses a lock to ensure single instance)
RUN_BACKGROUND_WORKER=1

# Health check settings (can also be changed at /settings/health/)
HEALTH_CHECK_INTERVAL=30
HEALTH_SCHEDULER_TICK=1
HEALTH_CHECK_HTTP_TIMEOUT=12
HEALTH_CHECK_BACKOFF_BASE=15
HEALTH_CHECK_BACKOFF_MAX=300

# Import/upload timeout (seconds)
IMPORT_HTTP_TIMEOUT=8

# Optional defaults for Procfile/PM2/etc.
PORT=8005
WEB_CONCURRENCY=5

DJANGO_ALLOW_ALL_HOSTS=1
